# Production environment variables
# Copy this to .env.production and fill in actual values
# DO NOT commit .env.production to version control

# Server
SERVER_ADDR=:8443
SERVER_ENV=production

# Database
DATABASE_URL=postgres://link:YOUR_DB_PASSWORD@localhost:5432/link?sslmode=disable

# Security
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRY=24h
CARD_TOKEN_SECRET=YOUR_CARD_TOKEN_SECRET

# Admin
ADMIN_PASSWORD=YOUR_SECURE_ADMIN_PASSWORD
BASE_URL=https://link.mcphub.tw

# CORS
CORS_ORIGINS=https://link.mcphub.tw,http://link.mcphub.tw

# TLS (if using custom certs)
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# Logging
LOG_LEVEL=info